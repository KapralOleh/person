.persons-section
  .back
    float right
    color gold
    font-weight bold
    border 1px solid maincolor
    border-radius 8px
    margin-top 10px
    background maincolor
    padding 5px
    @media(max-width:375px)
      width 50px
      margin-right 10px
    &:hover
      color maincolor
      background gold
      border 1px solid maincolor
  .animate
  &.ng-enter
    transition 0.5s linear all
    opacity 0
  .animate
  &.ng-enter
    &.ng-enter-active
      opacity 1
  .animate
  &.ng-leave
    transition 0.5s linear all
    opacity 1
  .animate
  &.ng-leave
    &.ng-leave-active
      opacity 0
    .animate
    &.ng-enter
      transition 0.3s linear all
      opacity 0
      transform translateX(-100%)
    .animate
    &.ng-enter
      &.ng-enter-active
        opacity 1
        transform translateX(0)
    .animate
    &.ng-leave
      transition 0.3s linear all
      opacity 1
      transform translateX(0)
    .animate
    &.ng-leave
      &.ng-leave-active
        opacity 0
        transform translateX(100%)

  .person-list
    .person-data
      color maincolor
    .animate
      display flex
      span
        display inline-block
        height 50px
        line-height 50px
        font-size 26px
      img
        width 50px
        height 50px
        border-radius 50%
        margin-right 20px
        border 1px solid maincolor
      .delete
        transform rotate(45deg)
        display inline-block
        line-height 50px
        margin-left 20px
        font-size 36px
        color red
        cursor pointer
