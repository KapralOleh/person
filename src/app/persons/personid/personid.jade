section.person-desk.person-id-section
  h1 {{PersonCtrl.currentPerson.name}}
  img(ng-src='{{PersonCtrl.currentPerson.img}}', alt='')
  p {{PersonCtrl.currentPerson.desc}}
  .gallery-section
    h2 Gallery
    .gallery(ng-repeat="image in PersonCtrl.currentPerson.images track by $index")
      img(ng-src="{{image}}" md-lightbox md-lightbox-title="Hello")
  .map-section
    h2 Location
    ui-gmap-google-map(draggable="true" center='PersonCtrl.currentPerson.map.center' zoom='PersonCtrl.currentPerson.map.zoom' options="PersonCtrl.currentPerson.options")
      ui-gmap-marker(coords="PersonCtrl.currentPerson.marker.coords" options="PersonCtrl.currentPerson.marker.options" idkey="PersonCtrl.currentPerson.marker.id")
        ui-gmap-window
          .title {{PersonCtrl.currentPerson.name}}

