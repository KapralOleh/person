.navigation
  background #9524A9
  height 60px
  border-radius 0 0 10px 10px
  li
    display inline-block
    &:first-child
      margin 0 0 0 100px
      border-left 2px solid gold
    & > a
      color gold
      height 100%
      display inline-block
      line-height 60px
      padding 0 20px
      &:hover
        background gold
        color #9524A9